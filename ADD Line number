}
SOURCE CODE FOR OUTPUT
#include <stdio.h>
int main() {
    char com[30];
    int i = 2, a = 0;
    printf("\nEnter Text: ");
    gets(com);
    if (com[0] == '/' && com[1] == '/') {
        printf("\nIt is a Comment.");
    } else if (com[0] == '/' && com[1] == '*') {
        for (i = 2; i <= 30; i++) {
            if (com[i] == '*' && com[i + 1] == '/') {
                printf("\nIt is a Comment.");
                a = 1;
                break;
            }
        }
        if (a == 0) {
            printf("\nIt is Not a Comment.");
        }
    } else {
        printf("\nIt is Not a Comment.");
    }

    return 0;
}
